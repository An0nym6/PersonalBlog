link(rel='stylesheet', type='text/css', href='css/blog.min.css')

md-content.md-padding(ng-cloak, ng-controller='blogController as bc', style='background-color: #f2f2f2')
  div(layout-xs='column', layout='row')
    div(flex-xs, flex-gt-xs='50', layout='column')
      md-card(ng-repeat='card in bc.blog', ng-if='$index % 2 == 0 && $index < bc.numberOfEssays')
        md-card-title
          md-card-title-text
            span.md-headline {{card.title}}
            span.md-subhead {{card.details}}
          md-card-title-media
            div.md-media-sm.card-media(repeat-date-directive) {{card.time.split('-')[2]}}
            div.month-year {{card.time.split('-')[1]}} {{card.time.split('-')[0]}}
        md-card-actions(layout='row', layout-align='end center')
          md-button(ng-click='bc.jumpToEssay(card.title)') 阅读博文
    div(flex-xs, flex-gt-xs='50', layout='column')
      md-card(ng-repeat='card in bc.blog', ng-if='$index % 2 != 0 && $index < bc.numberOfEssays')
        md-card-title
          md-card-title-text
            span.md-headline {{card.title}}
            span.md-subhead {{card.details}}
          md-card-title-media
            div.md-media-sm.card-media(repeat-date-directive) {{card.time.split('-')[2]}}
            div.month-year {{card.time.split('-')[1]}} {{card.time.split('-')[0]}}
        md-card-actions(layout='row', layout-align='end center')
          md-button(ng-click='bc.jumpToEssay(card.title)') 阅读博文
  div.buttonContainer
    md-button.md-raised.md-primary(ng-click='bc.loadMoreEssays()', ng-disabled='bc.isDisabled', id='loadMoreButton') {{bc.content}}

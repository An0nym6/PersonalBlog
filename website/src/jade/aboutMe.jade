link(rel='stylesheet', type='text/css', href='css/aboutMe.min.css')

md-content(style='background-color: #f2f2f2', layout='column', ng-controller='aboutMeController as amc')
  div.avatar-container
    img(src='img/avatar.png')
  div.md-padding(layout='column')
    div(layout-xs='column', layout='row')
      md-card(flex-gt-xs='50')
        md-card-title
          md-card-title-text
            span.md-headline 联系方式
        md-card-content
          md-list
            md-list-item.md-2-line
              md-icon(md-svg-icon='icons/phone.svg')
              div.md-list-item-text
                h4 手机
                h5 18826073587
            md-divider
            md-list-item.md-2-line
              md-icon(md-svg-icon='icons/email.svg')
              div.md-list-item-text
                h4 邮箱
                h5 0_0@liuren.link
            md-divider
            md-list-item.md-2-line
              md-icon(md-svg-icon='icons/location.svg')
              div.md-list-item-text
                h4 地址
                h5 中国广东省广州市番禺区大学城中山大学至善园 9 号 725 室
      md-card(flex-gt-xs='50')
        md-card-title
          md-card-title-text
            span.md-headline 学习经历
        md-card-content
          md-list
            md-list-item.md-2-line
              md-icon(md-svg-icon='icons/star-border.svg')
              div.md-list-item-text
                h4 小学 / 初中
                h5 四川师范大学实验外国语学校
            md-divider
            md-list-item.md-2-line
              md-icon(md-svg-icon='icons/star-half.svg')
              div.md-list-item-text
                h4 高中
                h5 成都石室中学
            md-divider
            md-list-item.md-2-line
              md-icon(md-svg-icon='icons/star.svg')
              div.md-list-item-text
                h4 大学
                h5 中山大学
    md-card
      md-card-title
        md-card-title-text
          span.md-headline 留言板
      md-card-content
        md-list.md-dense
          md-list-item.md-2-line(ng-repeat='comment in amc.comments')
            div.comment-avatar {{comment.name[0]}}
            div.md-list-item-text(layout='column')
              h4 {{comment.name}}
              h5 {{comment.text}}
            md-divider(ng-if='!$last')
    md-card
      md-card-title
        md-card-title-text
          span.md-headline 参与留言
      md-card-content
        form(layout-xs='column', layout='row', name='addComment')
          md-input-container.md-block(flex-gt-xs='60')
            label 立即参与留言...
            input(ng-model='comment.text', required, md-maxlength='100', name='text')
            div(ng-messages='addComment.text.$error')
              div(ng-message='required') 评论不能为空
              div(ng-message='md-maxlength') 评论不能超过 100 字
          div(layout='row', flex-gt-xs='40')
            md-input-container.md-block(flex='50')
              label 你的昵称
              input(ng-model='comment.name', required, md-maxlength='10', name='name')
              div(ng-messages='addComment.name.$error')
                div(ng-message='required') 昵称不能为空
                div(ng-message='md-maxlength') 昵称不能超过 10 字
            md-checkbox(flex='50') 记住昵称
        div.submit-button-container
          md-button.md-raised.md-primary(ng-click='amc.submit()') 提 交
